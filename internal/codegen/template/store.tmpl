// {{ .LayoutFuncName }} returns the record layout for {{ .Name }}.
func {{ .LayoutFuncName }}() *mmapforge.RecordLayout {
	fields := []mmapforge.FieldDef{
		{{- range .Fields }}
		{Name: "{{ .Name }}", GoName: "{{ .GoName }}", Type: {{ .TypeConstant }}, MaxSize: {{ .MaxSize }}},
		{{- end }}
	}
	layout, err := mmapforge.ComputeLayout(fields)
	if err != nil {
		panic("mmapforge: layout computation failed: " + err.Error())
	}
	return layout
}

// {{ .StoreName }} is the typed store for {{ .Name }} records.
type {{ .StoreName }} struct {
	*mmapforge.Store
}

// {{ .NewStoreFuncName }} creates a new {{ .Name }} store at the given path.
func {{ .NewStoreFuncName }}(path string) (*{{ .StoreName }}, error) {
	layout := {{ .LayoutFuncName }}()
	s, err := mmapforge.CreateStore(path, layout, {{ .SchemaVersion }})
	if err != nil {
		return nil, err
	}
	return &{{ .StoreName }}{Store: s}, nil
}

// {{ .OpenStoreFuncName }} opens an existing {{ .Name }} store at the given path.
func {{ .OpenStoreFuncName }}(path string) (*{{ .StoreName }}, error) {
	layout := {{ .LayoutFuncName }}()
	s, err := mmapforge.OpenStore(path, layout, {{ .SchemaVersion }})
	if err != nil {
		return nil, err
	}
	return &{{ .StoreName }}{Store: s}, nil
}

